<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    
    <appender name="STDOUT"
    	class="ch.qos.Logback.core.ConsoleAppender">
    
    	<encoder>
    		<pattern>%msg%n</pattern>
    	</encoder>
    
    </appender>
    
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    
    
</configuration>